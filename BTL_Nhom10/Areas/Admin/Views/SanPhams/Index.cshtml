@model IEnumerable<BTL_Nhom10.Areas.Admin.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="margin">
    <h2>Sản phẩm</h2>

    <span class="btn btn-success add-new">
        @Html.ActionLink("Thêm mới", "Create")
    </span>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DanhMuc.TenDM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThongSo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>Thao tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhMuc.TenDM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @{
                        string path = "~/wwwroot/images/" + item.AnhSP;
                    }
                    <img src="@Url.Content(path)" class="img-thumbnail" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThongSo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP.Trim() }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP.Trim() }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP.Trim() })
                </td>
            </tr>
        }

    </table>
</div>
