@model BTL_Nhom10.Areas.Admin.Models.DanhMuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="margin">
    <h2>Xóa Danh Mục</h2>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MaDM)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MaDM)
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TenDM)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenDM)
            </dd>
        </dl>
        @if (ViewBag.error != null)
        {
            <p class="alert alert-danger">@ViewBag.error</p>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
</div>
