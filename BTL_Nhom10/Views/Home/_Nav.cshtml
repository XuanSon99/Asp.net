@model IEnumerable<BTL_Nhom10.Areas.Admin.Models.DanhMuc>
<ul class="navbar-nav">
    <li class="nav-item">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
    </li>
    @foreach (var item in Model)
    {
        <li class="nav-item">
            <a href="@Url.Action("Index", "Category", new { id = item.MaDM.Trim()})" class="nav-link">
                @{
                    @Html.DisplayFor(modelItem => item.TenDM)
                }
            </a>
        </li>
    }
    @if (Session["TaiKhoan1"] != null)
    {
        <li class="nav-item account-info">
            <a class="nav-link">Account</a>
            <div class="detail-account">
                <p>@Session["TaiKhoan1"]</p>
                <span>@Html.ActionLink("Logout", "Logout", "Home")</span>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login","Home")">Login</a>
        </li>
    }
</ul>
