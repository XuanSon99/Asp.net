@model IEnumerable<BTL_Nhom10.Areas.Admin.Models.SanPham>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section StyleSheet{
    <link href="~/Content/details.css" rel="stylesheet" />
}

<div id="wrap-inner">
    <div id="product-info">
        @foreach (var item in Model)
        {
            <div class="clearfix"></div>
            <h3>@Html.DisplayFor(modelItem => item.TenSP)</h3>
            <div class="row main-details">
                <div id="product-img" class="col-xl-4 text-center">
                    @{ 
                        string path = "~/wwwroot/images/" + item.AnhSP;
                    }
                    <img height="220" src="@Url.Content(path)">
                </div>
                <div id="product-details" class="col-xl-8">
                    <p>Giá: <span class="price">@Html.DisplayFor(modelItem => item.DonGia)₫</span></p>
                    <p><i class="fas fa-check-circle"></i>Thông số: @Html.DisplayFor(modelItem => item.ThongSo)</p>
                    <p><i class="fas fa-check-circle"></i>Trạng thái: @Html.DisplayFor(modelItem => item.TrangThai)</p>
                    <p class="add-cart text-center"><a href="">Đặt hàng</a></p>
                </div>
            </div>
        }
    </div>
    <div id="comment">
        <h3>Bình luận</h3>
        <div class="col-md-12 comment">
            <form method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input required type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="name">Họ Tên:</label>
                    <input required type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="cm">Bình luận:</label>
                    <textarea required rows="10" id="cm" class="form-control" name="content"></textarea>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn my-btn">Bình luận</button>
                </div>
            </form>
        </div>
    </div>
    <div id="comment-list" class="col-md-12 comment-list">
        <h4 class="text-secondary">Bình luận</h4>
        <ul>
            <li class="com-title">
                <span class="text-info">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle text-success" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                    </svg>
                </span>
                <br>
                <span class="text-secondary"></span>
            </li>
            <li class="com-details">
            </li>
        </ul>
    </div>
</div>

